@{
    var db = Database.Open("computerscienceprojectportal");
    var selectQueryString = "select * from computerscienceprojectportal.computerscienceprojectportal.PROJECT";

//very good intro of how to: https://docs.microsoft.com/en-us/aspnet/web-pages/overview/data/5-working-with-data
}



<!DOCTYPE html>
<html lang="en">
<head>
	
	
	
	<!-- Required meta tags -->
	<meta name="description" content="WebDev">
	<meta name="keywords" content="Computer Science Project Portal">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta charset="UTF-8">
	<title>Computer Science Project Portal</title>
	
	<!-- Bootstrap css -->
	<link rel="stylesheet" 
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" 
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" 
    crossorigin="anonymous">
	
	<!-- Custom CSS  - put last to override bootstrap where needed-->
	<link rel="stylesheet" href="CSPPstylesheet.css">

	<script src="jquery-3.3.1.js"></script>
	<script src="CSPPjavascript.js"></script>
	<script src="CSPPJQuery.js"></script>

		
	
</head>
<body>
	<header>
  		<!-- DOM innerHTML logo text -->
  			<div id="universal-header"></div>
		<!-- 	<div><a href="emailsent.html">Check the 'email sent' page</a></div> -->
		<!-- DOM innerHTML navigation bar -->
			<div id="universal-navbar"></div>
	</header>
	
	<main>	
		<div class="container">
  			<div id="imgRowHomePage" class="row">
			  	View Project
			</div>
            <div class="row">
                <table border="1" border-spacing: 2px; cellpadding: 2px;>
                   <thead>
                       <tr>
                           <th>ProjectNumber </th>
                           <th>ProjectName</th>
                           <th>ProjectDescription</th>
						   <th>Authors</th>
						   <th>UploadDate</th>
						   <th>ProjectTag1</th>
                       </tr>
                   </thead>
                   <tbody>
                       @foreach(var row in db.Query(selectQueryString)){
                        <tr>
                           <td>@row.ProjectNumber</td>
                           <td>@row.ProjectName</td>
                           <td>@row.ProjectDescription</td>
						   <td>@row.Authors</td>
						   <td>@row.UploadDate </td>
						   <td>@row.ProjectTag1</td>
                        </tr>
                       }
                   </tbody>
               </table>
			</div>
  		</div>
  		
	</main>
	
	<footer>
		<!-- DOM innerHTML footer -->
  			<div id="universal-footer"></div>
	</footer>


</body>
</html>